<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyBG"
    tools:context=".fragment.ApplicationFormDocuments">

    <TextView
        android:id="@+id/tvDocsUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Documents"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUploadDocs"
        app:cardCornerRadius="22dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDocsUpload"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvProof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proof of Enrollment"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvProofHelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/tvProof"
                android:text="Upload recent fee receipt (PDFs only)"
                app:layout_constraintTop_toBottomOf="@id/tvProof"
                />

            <Button
                android:id="@+id/btnProofOfEnrollment"
                android:layout_width="wrap_content"
                android:text="Select"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_bg"
                app:layout_constraintStart_toStartOf="@id/tvProofHelper"
                app:layout_constraintTop_toBottomOf="@id/tvProofHelper"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvFeeStructure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee Structure"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btnProofOfEnrollment"
                app:layout_constraintStart_toStartOf="@id/btnProofOfEnrollment"
                />
            <TextView
                android:id="@+id/tvFeeStructureHelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/tvFeeStructure"
                android:text="Upload your institutions fee structur(PDFs only)"
                app:layout_constraintTop_toBottomOf="@id/tvFeeStructure"
                />

            <Button
                android:id="@+id/btnFeeStructure"
                android:layout_width="wrap_content"
                android:text="Select"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/tvFeeStructureHelper"
                app:layout_constraintTop_toBottomOf="@id/tvFeeStructureHelper"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvBankStatement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Statement (Last 6 months)"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/btnFeeStructure"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/btnBankStatement"
                android:layout_width="wrap_content"
                android:text="Select"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_bg"
                app:layout_constraintStart_toStartOf="@id/tvBankStatement"
                app:layout_constraintTop_toBottomOf="@id/tvBankStatement"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAdditionalDocs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Documents"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@id/btnBankStatement"
                app:layout_constraintTop_toBottomOf="@id/btnBankStatement"
                />

            <Button
                android:id="@+id/btnAdditional1"
                android:layout_width="50dp"
                android:background="@drawable/btn_bg"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="@id/tvAdditionalDocs"
                app:layout_constraintTop_toBottomOf="@id/tvAdditionalDocs" />

            <Button
                android:id="@+id/btnAdditional2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="+"
                android:textSize="25sp"
                android:background="@drawable/btn_bg"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnAdditional1"
                app:layout_constraintTop_toBottomOf="@id/tvAdditionalDocs" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="UPLOAD"
        android:background="@drawable/btn_bg"
        app:layout_constraintTop_toBottomOf="@id/cvUploadDocs"
        app:layout_constraintEnd_toEndOf="@id/cvUploadDocs"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clChatHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DCDCDC"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/btnChatBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/tvChatHeader"
            app:layout_constraintTop_toTopOf="@id/tvChatHeader"/>

        <TextView
            android:id="@+id/tvChatHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnChatBack"
            android:textSize="25sp"
            android:text="Applicant's Name"
            android:textColor="#5896d6"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clChatMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clChatHeader"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clChatMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/etCAMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:background="@drawable/chat_msg_bg"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:hint="Type a message"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@id/btnCAAttachment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCASendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:focusable="true"
            android:backgroundTint="@android:color/holo_blue_light"
            android:clickable="true"
            android:src="@drawable/ic_baseline_send_24"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCAAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btnCASendMessage"
            app:layout_constraintEnd_toStartOf="@id/btnCASendMessage"
            android:layout_marginRight="5dp"
            android:rotation="45"
            android:focusable="true"
            android:clickable="true"
            android:backgroundTint="@android:color/holo_blue_light"
            android:src="@drawable/ic_baseline_attach_file_24"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
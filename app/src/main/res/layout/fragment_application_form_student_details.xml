<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBG"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ApplicationFormStudentDetails">

    <TextView
        android:id="@+id/tvStudentDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student's Details"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvStudentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="22dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvStudentDetail"
        app:layout_constraintStart_toStartOf="@id/tvStudentDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="First Name*"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/etStudentFirstName"
                app:layout_constraintEnd_toStartOf="@+id/etStudentFirstName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etStudentFirstName" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginRight="5dp"
                app:layout_constraintEnd_toStartOf="@id/etStudentFirstName"
                app:layout_constraintBottom_toBottomOf="@id/etStudentFirstName"
                app:layout_constraintTop_toTopOf="@id/etStudentFirstName"
                />

            <EditText
                android:id="@+id/etStudentFirstName"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:background="@drawable/et_bg"
                android:inputType="textPersonName"
                android:text="XXXXXXXX"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#a9a9a9"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toTopOf="@id/etStudentLastName"
                app:layout_constraintTop_toBottomOf="@id/etStudentFirstName"
                />

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Last Name*"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/etStudentLastName"
                app:layout_constraintEnd_toStartOf="@+id/etStudentLastName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etStudentLastName" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginRight="5dp"
                app:layout_constraintEnd_toStartOf="@id/etStudentLastName"
                app:layout_constraintBottom_toBottomOf="@id/etStudentLastName"
                app:layout_constraintTop_toTopOf="@id/etStudentLastName"
                />

            <EditText
                android:id="@+id/etStudentLastName"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_bg"
                android:inputType="textPersonName"
                android:text="XXXXXXXX"
                app:layout_constraintEnd_toEndOf="@id/etStudentFirstName"
                app:layout_constraintTop_toBottomOf="@id/etStudentFirstName" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#a9a9a9"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toTopOf="@id/etStudentAadharNumber"
                app:layout_constraintTop_toBottomOf="@id/etStudentLastName"
                />

            <TextView
                android:id="@+id/tvAadharNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Aadhar Number*"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/etStudentAadharNumber"
                app:layout_constraintEnd_toStartOf="@+id/etStudentAadharNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etStudentAadharNumber" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginRight="5dp"
                app:layout_constraintEnd_toStartOf="@id/etStudentAadharNumber"
                app:layout_constraintBottom_toBottomOf="@id/etStudentAadharNumber"
                app:layout_constraintTop_toTopOf="@id/etStudentAadharNumber"
                />

            <EditText
                android:id="@+id/etStudentAadharNumber"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_bg"
                android:inputType="textPersonName"
                android:text="XXXXXXXX"
                app:layout_constraintEnd_toEndOf="@id/etStudentLastName"
                app:layout_constraintTop_toBottomOf="@id/etStudentLastName" />

            <Button
                android:id="@+id/btnStudentLocation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvAadharNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/etStudentAadharNumber"
                />

            <TextView
                android:id="@+id/tvStudentContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Contact Number*"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/etStudentContactNumber"
                app:layout_constraintEnd_toStartOf="@+id/etStudentContactNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etStudentContactNumber" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginRight="5dp"
                app:layout_constraintEnd_toStartOf="@id/etStudentContactNumber"
                app:layout_constraintBottom_toBottomOf="@id/etStudentContactNumber"
                app:layout_constraintTop_toTopOf="@id/etStudentContactNumber"
                />

            <EditText
                android:id="@+id/etStudentContactNumber"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:ems="10"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_bg"
                android:inputType="textPersonName"
                android:text="XXXXXXXX"
                android:layout_marginBottom="40dp"
                app:layout_constraintEnd_toEndOf="@id/etStudentLastName"
                app:layout_constraintTop_toBottomOf="@id/btnStudentLocation"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="@id/etStudentContactNumber"
                android:text="(*) fields are compulsory"
                app:layout_constraintTop_toBottomOf="@id/tvStudentContactNumber"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:background="@drawable/btn_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvStudentDetails"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
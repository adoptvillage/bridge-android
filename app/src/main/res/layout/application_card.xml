<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/appCard"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="22dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#95E2E2E2">

            <TextView
                android:id="@+id/tvRecipientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="James Doe"
                android:textColor="@color/systemViolet"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_chats"
                android:drawableTint="@color/systemViolet"
                android:drawablePadding="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/applicationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/et_bg"
                android:textColor="@color/systemViolet"
                app:layout_constraintBottom_toBottomOf="@+id/tvRecipientName"
                app:layout_constraintStart_toEndOf="@+id/tvRecipientName"
                app:layout_constraintTop_toTopOf="@+id/tvRecipientName">

            </TextView>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/donor"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#000"

                app:layout_constraintBottom_toBottomOf="@+id/cardDonor"
                app:layout_constraintEnd_toStartOf="@+id/cardDonor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardDonor" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/moderator"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/cardModerator"
                app:layout_constraintEnd_toStartOf="@+id/cardModerator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardDonor" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/amount"
                android:textSize="15sp"
                android:textColor="#000"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/cardAmount"
                app:layout_constraintEnd_toStartOf="@+id/cardAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardModerator" />

            <TextView
                android:id="@+id/cardDonor"
                android:layout_width="220dp"
                android:background="@drawable/et_bg"
                android:text="JohnDoe"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/systemViolet"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecipientName">
            </TextView>

            <TextView
                android:id="@+id/cardModerator"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:text="Jenny Doe"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/systemViolet"
                app:layout_constraintTop_toBottomOf="@id/cardDonor"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/cardAmount"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="$400"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/cardModerator"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:background="@drawable/et_bg"
                android:textColor="@color/systemViolet" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a9a9a9"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDonor" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:background="#a9a9a9"
                app:layout_constraintTop_toTopOf="@+id/cardDonor"
                app:layout_constraintBottom_toBottomOf="@+id/cardDonor"
                app:layout_constraintEnd_toStartOf="@+id/cardDonor" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#a9a9a9"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="@id/cardAmount"
                app:layout_constraintBottom_toBottomOf="@+id/cardAmount"
                app:layout_constraintEnd_toStartOf="@+id/cardAmount" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#a9a9a9"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="@id/cardModerator"
                app:layout_constraintBottom_toBottomOf="@+id/cardModerator"
                app:layout_constraintEnd_toStartOf="@+id/cardModerator" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#a9a9a9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardModerator" />

            <ProgressBar
                android:id="@+id/submitProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progressTint="#09af00"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/cardAmount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submitted"
                android:textSize="15sp"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@id/submitProgress"
                app:layout_constraintStart_toStartOf="@id/submitProgress"
                app:layout_constraintEnd_toEndOf="@id/submitProgress"
                />

            <ProgressBar
                android:id="@+id/reviewProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="95dp"
                android:progressTint="#09af00"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/completedProgress"
                app:layout_constraintStart_toEndOf="@+id/submitProgress"
                app:layout_constraintTop_toTopOf="@+id/submitProgress" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviewed"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/reviewProgress"
                app:layout_constraintStart_toStartOf="@id/reviewProgress"
                app:layout_constraintTop_toBottomOf="@id/reviewProgress" />

            <ProgressBar
                android:id="@+id/completedProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="95dp"
                android:progressTint="#09af00"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/submitProgress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verified"
                android:textSize="15sp"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@id/completedProgress"
                app:layout_constraintStart_toStartOf="@id/completedProgress"
                app:layout_constraintEnd_toEndOf="@id/completedProgress"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
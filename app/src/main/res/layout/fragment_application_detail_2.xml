<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyBG"
    tools:context=".fragment.applicationListFragment.ApplicationDetail_2">

    <TextView
        android:id="@+id/tvAppDetail2Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="#5896d6"
        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
        />

    <TextView
        android:id="@+id/tvInviteModerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#000"
        android:text="Invite Moderator"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvAppDetail2Back"
        app:layout_constraintTop_toBottomOf="@id/tvAppDetail2Back"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvModeratorEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvInviteModerator"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="12dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etModeratorEmailAddress"
                android:background="@drawable/et_bg"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:inputType="textEmailAddress"
                android:layout_height="match_parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/cvModeratorEmail"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btnAcceptApplication"
                android:text="Accept Application"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/systemViolet"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
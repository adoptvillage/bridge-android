<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBG"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.applicationListFragment.ApplicationDetail1">

    <TextView
        android:id="@+id/tvAppDetail1Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="20sp"
        android:textColor="#5896d6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/tvAppDetailRecipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipient_name"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppDetail1Back"
        app:layout_constraintStart_toStartOf="@id/tvAppDetail1Back"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAppDetails"
        app:layout_constraintTop_toBottomOf="@id/tvAppDetailRecipient"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAppDetailInstituteName"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Sample Text"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailInstituteName"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailInstituteName"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailInstituteName"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a9a9a9"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvAppDetailInstituteName"
                app:layout_constraintBottom_toTopOf="@id/tvInsLocation"
                />

            <TextView
                android:id="@+id/tvAppDetailInsLocation"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppDetailInstituteName"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Sample Text"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailInsLocation"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailInsLocation"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailInsLocation"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a9a9a9"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvInsLocation"
                app:layout_constraintBottom_toTopOf="@id/tvAppDetailAmount"
                />

            <TextView
                android:id="@+id/tvAppDetailAmount"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppDetailInsLocation"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Sample Text"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailAmount"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailAmount"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailAmount"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a9a9a9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toTopOf="@id/tvHometown"
                app:layout_constraintTop_toBottomOf="@id/tvAppDetailAmount"
                />

            <TextView
                android:id="@+id/tvAppDetailRecipientHometown"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppDetailAmount"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Sample Text"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#a9a9a9"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailRecipientHometown"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailRecipientHometown"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailRecipientHometown"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#a9a9a9"
                app:layout_constraintTop_toBottomOf="@id/tvHometown" />

            <TextView
                android:id="@+id/tvAppDetailPurpose"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppDetailRecipientHometown"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="The quick brown fox jumps over the lazy dog"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                />

            <View
                android:id="@+id/view5"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginEnd="2dp"
                android:background="#a9a9a9"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailPurpose"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailPurpose"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailPurpose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/institute_name"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailInstituteName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailInstituteName"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailInstituteName"
                />

            <TextView
                android:id="@+id/tvInsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/institute_location"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailInsLocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailInsLocation"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailInsLocation"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailAmount"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailAmount"
                />

            <TextView
                android:id="@+id/tvHometown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipient_hometown"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailRecipientHometown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailRecipientHometown"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailRecipientHometown"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purpose"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/tvAppDetailPurpose"
                app:layout_constraintEnd_toStartOf="@id/tvAppDetailPurpose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvAppDetailPurpose" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAppDetail1Next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="@string/next"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:backgroundTint="@color/systemViolet"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cvAppDetails"
        app:layout_constraintStart_toStartOf="@+id/cvAppDetails"
        app:layout_constraintTop_toBottomOf="@+id/cvAppDetails"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>

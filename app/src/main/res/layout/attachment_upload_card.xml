<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/btnCloseUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:textColor="#ff0000"
            />

        <Button
            android:id="@+id/btnImageSelection"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPDFSelection"
            android:background="@drawable/ic_baseline_image_24"
            android:backgroundTint="#5896d6"
            android:drawableTint="#5896d6"
            />


        <Button
            android:id="@+id/btnPDFSelection"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_baseline_picture_as_pdf_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnImageSelection"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            app:layout_constraintStart_toStartOf="@id/btnImageSelection"
            app:layout_constraintEnd_toEndOf="@id/btnImageSelection"
            app:layout_constraintTop_toBottomOf="@id/btnImageSelection"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF File"
            app:layout_constraintTop_toBottomOf="@id/btnPDFSelection"
            app:layout_constraintStart_toStartOf="@id/btnPDFSelection"
            app:layout_constraintEnd_toEndOf="@id/btnPDFSelection"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>